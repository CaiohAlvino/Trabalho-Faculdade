<Window x:Class="trabalho.programacao.IV.AgeInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verificador de Maioridade" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Digite sua idade:"/>
            <TextBox x:Name="txtIdade" Margin="0,5,0,10"/>
            <Button Content="Verificar" Click="ButtonVerificar_Click" 
              HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
