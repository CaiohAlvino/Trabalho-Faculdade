<Window x:Class="trabalho.programacao.IV.TempInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversor de Temperatura" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Digite a temperatura em Celsius:"/>
            <TextBox x:Name="txtCelsius" Margin="0,5,0,10"/>
            <Button Content="Converter" Click="ButtonConverter_Click" 
              HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
