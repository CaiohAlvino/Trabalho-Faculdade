<Window x:Class="trabalho.programacao.IV.LigaDesligaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liga/Desliga" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="txtEstado" Text="Desligado" 
                 FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Button Content="Alternar" Click="ButtonAlternar_Click" 
              HorizontalAlignment="Center" Width="100"/>
            <Button Content="Finalizar" Click="ButtonFinalizar_Click" 
              HorizontalAlignment="Center" Width="100" Margin="10,5,10,0"/>
        </StackPanel>
    </Grid>
</Window>
