<Window x:Class="trabalho.programacao.IV.DiaSemanaInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verificar Dia da Semana" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Selecione uma data:"/>
            <DatePicker x:Name="dpData" Margin="0,5,0,10"/>
            <Button Content="Verificar" Click="ButtonVerificar_Click" 
              HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
