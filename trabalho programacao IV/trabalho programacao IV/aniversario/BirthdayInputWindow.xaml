<Window x:Class="trabalho.programacao.IV.BirthdayInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dias Ate o Proximo Aniversario" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Selecione sua data de nascimento:"/>
            <DatePicker x:Name="dpNascimento" Margin="0,5,0,10"/>
            <Button Content="Calcular" Click="ButtonCalcular_Click" 
              HorizontalAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
